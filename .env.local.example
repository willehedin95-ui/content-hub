# Supabase (get from supabase.com → your project → Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# OpenAI (get from platform.openai.com → API Keys)
OPENAI_API_KEY=sk-...

# Netlify (get from netlify.com → User Settings → Applications → Personal access tokens)
NETLIFY_TOKEN=nfp_...

# Netlify Site IDs (get from each site: Netlify dashboard → site → Site settings → General → Site ID)
NETLIFY_SITE_ID_SV=         # blog.halsobladet.com
NETLIFY_SITE_ID_DA=         # smarthelse.dk
NETLIFY_SITE_ID_NO=         # helseguiden.com

# App URL (public URL of this dashboard, used for A/B test tracking pixels)
APP_URL=https://your-app.vercel.app

# Meta Marketing API (get from Meta Business Manager → System Users)
META_SYSTEM_USER_TOKEN=    # Long-lived System User access token
META_AD_ACCOUNT_ID=        # Ad Account ID (without 'act_' prefix)
META_PAGE_ID=              # Facebook Page ID for ad creatives
